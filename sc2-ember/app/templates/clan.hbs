<h1 class="header center aligned ui">[{{model.tag}}] {{model.name}}</h1>

<div class="ui divided very relaxed list ten wide">
  <div class="ui action left icon input">
    <i class="search icon"></i>
    <input type="text" placeholder="Search...">
    <div class="ui teal button">Search</div>
  </div>
  {{#each player in model.players}}
    <div class="item player-row" {{action 'selectPlayer' player }}>
      <div class="league league-mid" {{bind-attr league=player.highest_league_type rank=player.highest_league_rank}}></div>
      <div class="content" style="padding-left: 10px;float:left;">
        <div class="header">{{player.name}}</div>
        {{player.highest_league_type}} {{player.ggplayer.most_played_race}}
      </div>
    </div>
  {{/each}}
</div>
<div class="window">
  {{outlet}}
</div>
